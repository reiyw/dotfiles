{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
sudo ()
{
    [[ $EUID = 0 ]] || set -- command sudo "$@"
    "$@"
}
sudo apt install -y \
    bat \
    fd-find \
    fzf \
    ripgrep \
    ;
{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/bash
brew install \
    bat \
    fd \
    fzf \
    lsd \
    ripgrep \
    ;
{{ end -}}
