{{ if eq .chezmoi.os "linux" -}}

#!/bin/bash
sudo ()
{
    [[ $EUID = 0 ]] || set -- command sudo "$@"
    "$@"
}

sudo apt install -y \
    bat \
    curl \
    fd-find \
    git \
    glances \
    htop \
    ripgrep \
    shellcheck \
    unzip \
    wget \
    zip \
    zsh \
    ;

wget https://github.com/neovim/neovim/releases/download/v0.8.0/nvim-linux64.deb
sudo apt install ./nvim-linux64.deb
rm nvim-linux64.deb

